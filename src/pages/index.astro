---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
	(a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout title="Synapse Verse - A place to read about cool neuro research">
	<main>
		<div class="hero panel">
			<div class="hero-content">
				<h1>Synapse Verse</h1>
				<p class="tagline">A place to read about cool neuro research</p>
				<div class="hero-divider"></div>
				<p class="hero-desc">
					An attempt to talk about neuroscience in an enganging but educational way from the persepctive of a student researcher.
				</p>

				<p class="footer-links">
					<a href="/rss.xml" style="text-decoration: none;">RSS Feed</a>
				</p>
			</div>
		</div>

		<section class="blog-section">
			<div class="blog-grid">
				{sortedPosts.map((post) => (
					<BlogCard post={post} />
				))}
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
	}

	.hero {
		padding: 4rem 2rem;
		text-align: center;
		margin: 1rem 2rem 0 2rem;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		max-width: 900px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3.5rem;
		margin-bottom: 0.5rem;
		color: #dc143c;
		letter-spacing: 0.1em;
		font-family: var(--font-punk);
		font-weight: 900;
		filter: drop-shadow(4px 4px 0 #ffd700);
		text-shadow: 2px 2px 0px #FFD700,
		             -2px -2px 0px #FF0000,
		             2px -2px 0px #00FFFF,
		             -2px 2px 0px #FF00FF;
	}

	.tagline {
		font-size: 1.2rem;
		color: #00008b;
		font-family: var(--font-punk);
		margin: 0;
		font-weight: 700;
	}

	.hero-divider {
		width: 80px;
		height: 6px;
		background: #000;
		margin: 1.5rem auto;
		border-radius: 0;
	}

	.hero-desc {
		font-size: 1.1rem;
		color: #1a1a1a;
		line-height: 1.6;
		max-width: 600px;
		margin: 1.5rem auto 0;
		font-family: Georgia, serif;
	}

	.blog-section {
		padding: 0;
	}

	.footer-links {
		margin-top: 1rem !important;
	}

	.footer-links a {
		color: #00008b;
		border-bottom: 3px solid #00008b;
		transition: all 0.2s ease;
	}

	.footer-links a:hover {
		color: #dc143c;
		border-bottom-color: #dc143c;
	}
</style>
