---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
	(a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout title="NEURO SYNAPSE - Comic Book Neuroscience Blog">
	<main>
		<div class="hero panel">
			<div class="hero-content">
				<h1>NEURO SYNAPSE</h1>
				<p class="tagline">A Comic Book Neuroscience Journal</p>
				<div class="hero-divider"></div>
				<p class="hero-desc">
					Exploring the mysteries of the human brain through the lens of classic comic book storytelling. 
					Bold illustrations, bigger ideas.
				</p>
			</div>
		</div>

		<section class="blog-section">
			<div class="blog-grid">
				{sortedPosts.map((post) => (
					<BlogCard post={post} />
				))}
			</div>
		</section>

		<footer class="site-footer">
			<div class="footer-content">
				<p>Telling brain science through bold panels and vivid colors</p>
				<p class="footer-links">
					<a href="/rss.xml">RSS Feed</a>
				</p>
			</div>
		</footer>
	</main>
</Layout>

<style>
	main {
	}

	.hero {
		padding: 4rem 2rem;
		text-align: center;
		margin: 1rem 2rem 0 2rem;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		max-width: 900px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3.5rem;
		margin-bottom: 0.5rem;
		color: #dc143c;
		letter-spacing: 0.15em;
		font-family: var(--font-comic);
		font-weight: 900;
		text-shadow: 3px 3px 0 #ffd700;
	}

	.tagline {
		font-size: 1.2rem;
		color: #00008b;
		font-family: var(--font-comic);
		margin: 0;
		font-weight: 700;
	}

	.hero-divider {
		width: 80px;
		height: 6px;
		background: #000;
		margin: 1.5rem auto;
		border-radius: 0;
	}

	.hero-desc {
		font-size: 1.1rem;
		color: #1a1a1a;
		line-height: 1.6;
		max-width: 600px;
		margin: 1.5rem auto 0;
		font-family: Georgia, serif;
	}

	.blog-section {
		padding: 0;
	}

	.site-footer {
		border-top: 5px solid #000;
		padding: 3rem 2rem;
		text-align: center;
		background: #f5f5dc;
		margin: 0 2rem;
		border: 5px solid #000;
		border-top: 8px solid #000;
		box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.2);
		margin-bottom: 2rem;
	}

	.footer-content p {
		margin: 0.5rem 0;
		color: #1a1a1a;
		font-family: var(--font-comic);
		font-size: 1rem;
		font-weight: 700;
	}

	.footer-links {
		margin-top: 1rem !important;
	}

	.footer-links a {
		color: #00008b;
		border-bottom: 3px solid #00008b;
		transition: all 0.2s ease;
	}

	.footer-links a:hover {
		color: #dc143c;
		border-bottom-color: #dc143c;
	}
</style>
