---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Guestbook - SYNAPSE VERSE">
	<main class="panel-container">
			<iframe 
				src="https://guestbooks.meadow.cafe/guestbook/5950" 
				class="panel guestbook-wrapper guestbook-iframe">
			</iframe>
			
			<div class="back-link-wrapper">
				<a href="/">‚Üê Back to Hub</a>
			</div>
	</main>
</Layout>

<style>
	.guestbook-wrapper {
		min-height: 80vh;
		display: flex;
		flex-direction: column;
	}

    .guestbook-iframe {
        flex-grow: 1; /* This makes the iframe fill the vertical space */
        border: 3px solid var(--color-dark);
		background-color: var(--color-white);
		margin: 1.5rem 0;
        width: 100%;
        height: 100%;
        frameborder: 0;
    }

	h1 {
		/* This will automatically use your global h1 style */
		text-shadow: 3px 3px 0 var(--color-accent-yellow);
	}

    .back-link-wrapper {
        margin-top: 1rem;
    }
</style>